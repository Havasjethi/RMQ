{
  "include": ["src/**/*"],
  "exclude": ["lib", "node_modules"],
  "compilerOptions": {
    "incremental": true,
    "target": "ES2021",
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
